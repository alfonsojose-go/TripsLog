@model TripsLog.Models.Trip

<h2 class="align-content-center">@ViewBag.Title</h2>

<form asp-controller="Trip" asp-action="SaveTrip" method="post">
    <div id="todos-container">
        @for (int i = 0; i < Model.Todos.Count; i++)
        {
            <div class="todo-item mb-2">
                <div class="input-group">
                    <div class="input-group-text">
                        <input asp-for="@Model.Todos[i].IsComplete" class="form-check-input" />
                    </div>
                    <input asp-for="@Model.Todos[i].Name" class="form-control" placeholder="Enter thing to do" />
                    <input type="hidden" asp-for="@Model.Todos[i].TodoId" />
                    <input type="hidden" asp-for="@Model.Todos[i].TripId" />
                    <button type="button" class="btn btn-outline-danger remove-todo">Remove</button>
                </div>
            </div>
        }
    </div>

    <button type="button" id="add-todo" class="btn btn-secondary mt-2">Add Another Todo</button>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Trip" asp-action="Accommodation" class="btn btn-primary">Back</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
    </div>
</form>

@section Scripts {
    <script>
        document.getElementById('add-todo').addEventListener('click', function() {
            const container = document.getElementById('todos-container');
            const index = container.children.length;

            const newTodo = `
                <div class="todo-item mb-2">
                    <div class="input-group">
                        <div class="input-group-text">
                            <input type="checkbox" name="Todos[${index}].IsComplete" class="form-check-input" />
                        </div>
                        <input type="text" name="Todos[${index}].Name" class="form-control" placeholder="Enter thing to do" />
                        <input type="hidden" name="Todos[${index}].TodoId" value="0" />
                        <input type="hidden" name="Todos[${index}].TripId" value="@Model.TripId" />
                        <button type="button" class="btn btn-outline-danger remove-todo">Remove</button>
                    </div>
                </div>
            `;

            container.insertAdjacentHTML('beforeend', newTodo);
        });

        // Remove todo item
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('remove-todo')) {
                e.target.closest('.todo-item').remove();
                // Reindex the remaining items
                reindexTodos();
            }
        });

        function reindexTodos() {
            const container = document.getElementById('todos-container');
            const items = container.getElementsByClassName('todo-item');

            Array.from(items).forEach((item, index) => {
                const inputs = item.querySelectorAll('input');
                inputs.forEach(input => {
                    const name = input.getAttribute('name');
                    if (name) {
                        input.setAttribute('name', name.replace(/\[\d+\]/, `[${index}]`));
                    }
                });
            });
        }
    </script>
}